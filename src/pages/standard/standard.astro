---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';

// src/pages/emscripten-app.astro
export interface Props {
    title?: string;
}

const { title = "Emscripten App" } = Astro.props;
---

<StarlightPage frontmatter={{ title: 'My custom page', tableOfContents: false }} >

<div style="width: 150%; height: 100%; margin-left: -25%">
    <canvas id="canvas" oncontextmenu="event.preventDefault()" tabindex="-1"></canvas>
    <textarea id="output" rows="3" cols="80" style="resize: none;" readonly></textarea>
</div>

<script>
    // Module interface for Emscripten
    interface EmscriptenModule {
        print: (...args: any[]) => void;
        canvas: HTMLCanvasElement;
        setStatus: (text: string) => void;
    }

    // Get DOM elements
    const canvasElement = document.getElementById("canvas") as HTMLCanvasElement;
    const outputElement = document.getElementById("output") as HTMLTextAreaElement;

    // Initialize output
    if (outputElement) {
        outputElement.value = "";
    }

    // Handle WebGL context loss
    canvasElement?.addEventListener("webglcontextlost", (e: Event) => {
        alert("WebGL context lost. You will need to reload the page.");
        e.preventDefault();
    }, false);

    // Configure Emscripten Module
    (window as any).Module = {
        print: (...args: any[]): void => {
            console.log(...args);
            if (outputElement) {
                const text = args.join(" ");
                outputElement.value += text + "\n";
                outputElement.scrollTop = outputElement.scrollHeight;
            }
        },
        canvas: canvasElement,
        setStatus: (text: string): void => {
            console.log(`Status: ${text}`);
        }
    } as EmscriptenModule;

    // Global error handler
    window.onerror = (error: string | Event): boolean => {
        console.error("Application error:", error);
        return true;
    };

    // Load the Emscripten-generated JavaScript
    const script = document.createElement('script');
    script.src = '/standard/antneat.js'; // Place antneat.js in public/ directory
    script.async = true;
    script.onload = () => {
        console.log('Emscripten module loaded successfully');
    };
    script.onerror = () => {
        console.error('Failed to load Emscripten module');
        if (outputElement) {
            outputElement.value += "Error: Failed to load application\n";
        }
    };
    document.head.appendChild(script);
</script>
</StarlightPage>
